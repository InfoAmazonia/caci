section#dossies(ng-show='dossiers.length' ng-class='{collapsed: initialized}')
  h2 DossiÃªs
  ul.dossie-list
    li(ng-repeat='dossier in dossiers')
      .image(style='background-image:url({{dossier.featured_image.attachment_meta.sizes.large.url}});')
      article
        h3
          a(ui-sref='home.dossier({id: dossier.ID})') {{dossier.title}}

section#content(autoscroll='false')
  section#casos(ng-class='{collapsed: isDossier}')
    ul.caso-list(ng-show='casos.length && initialized')
      li.clearfix(ng-repeat='caso in casos | limitTo:100')
        article
          .location
            span.icon.icon-pin
            p.location-info(ng-bind-html='caso | caseLocation')
          header.caso-header
            h3 {{caso | casoName}}
            .header-meta
              .age.meta(ng-show='caso.idade')
                p {{caso.idade}} anos
              .date.meta
                span.icon.icon-calendar
                p.date-info(ng-bind-html='caso | casoDate')
          p {{caso.descricao}}
          p.source(ng-show='caso.fonte_cimi') Fonte: {{caso.fonte_cimi}}

.map-container(ng-class='{full: isDossier}')
  map#map(map-data='mapData' markers='casos | postToMarker')
  
div(ui-view)
